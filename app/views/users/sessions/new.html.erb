<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<div class="bg_img">
 <div class="login-reg-panel">
   
              
    <div class="login-info-box ">
      <h2>Don't have an account?</h2>
      <%= link_to 'Sign Up'.html_safe, 
            new_user_registration_path,id: "label-register" %>

    </div>
              
    <div class="white-panel right-log">
      <div class="login-show show-log-panel">
        <h2>Sign In</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= render "users/shared/error_messages", resource: resource %>
     <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",class: "email_length" %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
     <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
         <%= f.submit "Log In", class: 'btn_submit' %>
        <% end %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>
      
    </div>
  </div>
</div>


 